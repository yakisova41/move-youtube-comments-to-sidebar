{
    "compilerOptions": {
        "lib": ["ESNext", "dom", "dom.iterable"],
        "module": "commonjs",
        "target": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["node", "dom", "@types/chrome"],
        "jsx": "react"
    },
    "typeRoots": ["./src/types.d.ts", "node_modules/@types/"],
    "includes": ["src/**/*", "build/*"]
}
