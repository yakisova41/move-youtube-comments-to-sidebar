{
    "name": "youtube-comment-moving-sidebar",
    "type": "commonjs",
    "devDependencies": {
        "@swc/core": "^1.3.25",
        "@types/glob": "^8.0.0",
        "@types/greasemonkey": "^4.0.4",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "bun-types": "^0.1.0",
        "chokidar": "3.5.3",
        "esbuild": "^0.15.12",
        "esbuild-plugin-eslint": "^0.1.1",
        "esbuild-ssr-css-modules-plugin": "^0.1.6",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-react-hooks": "^4.6.0",
        "express": "^4.18.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4",
        "typescript-plugin-css-modules": "^4.1.1",
        "ws": "^8.11.0",
        "d": "^1.0.1",
        "glob": "^8.1.0"
    },
    "dependencies": {
        "@types/chrome": "^0.0.209"
    },
    "scripts": {
        "hotreload-server": "npx ts-node build/sockserver.ts",
        "build:userscirpt": "npx ts-node build/ mode=build",
        "server": "npx ts-node build/server.ts",
        "dev": "npm run build:userscirpt mode=dev & npm run hotreload-server & npm run server",
        "build:ext": "npx ts-node build/ mode=ext",
        "build": "npm run build:userscirpt & npm run build:ext"
    },
    "userScript": {
        "@name": "Youtube comment moving to sidebar",
        "@version": "0.1",
        "@author": "yakisova41",
        "@description": "Make the Youtube comments section visible from the sidebar",
        "@match": "https://www.youtube.com/*",
        "devServer": {
            "port": 8002,
            "host": "localhost",
            "websocket": 5001,
            "hot": true
        },
        "esbuild": {
            "entryPoints": [
                "src/index.ts"
            ],
            "minify": false
        }
    }
}
